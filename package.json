{
  "name": "@rhao/plop-generators",
  "type": "module",
  "version": "0.8.0",
  "description": "Plop generators.",
  "author": "RayHao <https://github.com/l246804>",
  "license": "MIT",
  "homepage": "https://github.com/l246804/plop-generators",
  "repository": {
    "type": "git",
    "url": "https://github.com/l246804/plop-generators"
  },
  "bugs": {
    "url": "https://github.com/l246804/plop-generators/issues"
  },
  "keywords": [
    "plop",
    "generators",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./**/*": {
      "types": "./**/*.d.ts",
      "require": "./**/*.cjs",
      "import": "./**/*.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "run-p gen:generators",
    "dev": "vite build --watch",
    "build": "run-s gen:generators build:lib cp:static",
    "build:lib": "vite build",
    "plop": "plop",
    "gen:generators": "tsx scripts/gen-generators.ts",
    "cp:static": "tsx scripts/copy-static-files.ts",
    "release": "release-it",
    "cz": "cz"
  },
  "peerDependencies": {
    "plop": ">=3"
  },
  "dependencies": {
    "@antfu/install-pkg": "^0.1.1",
    "consola": "^3.2.3",
    "execa": "^7.2.0",
    "fs-extra": "^11.1.1",
    "inquirer-file-tree-selection-prompt": "^2.0.5",
    "local-pkg": "^0.4.3",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/types": "^17.4.4",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@release-it/conventional-changelog": "^7.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.4.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-define-config": "^1.21.0",
    "fast-glob": "^3.3.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "kolorist": "^1.8.0",
    "lodash-es": "^4.17.21",
    "node-plop": "0.31.1",
    "npm-run-all": "^4.1.5",
    "plop": "^3.1.2",
    "release-it": "^16.1.2",
    "rollup": "^3.26.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-dts": "^3.3.1"
  }
}

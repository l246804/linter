{
  "name": "{{#if scope}}@{{scopeName}}/{{/if}}{{name}}",
  "type": "module",
  "version": "0.0.0",
{{#if description}}
  "description": "{{description}}",
{{/if}}
  "author": "{{username}} <https://github.com/{{account}}>",
  "license": "MIT",
  "homepage": "https://github.com/{{account}}/{{name}}",
  "repository": {
    "type": "git",
    "url": "https://github.com/{{account}}/{{name}}"
  },
  "bugs": {
    "url": "https://github.com/{{account}}/{{name}}/issues"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    {{#if build}}
    "build": "build",
    {{/if}}
    {{#if releaseIt}}
    "release": "release-it",
    {{/if}}
    {{#if changesets}}
    "change": "changeset",
    "change:version": "changeset version",
    "change:publish": "changeset publish",
    "release": "run-s{{#if build}} build{{/if}} change:version change:publish",
    {{/if}}
    {{#if commitizen}}
    "cz": "cz",
    {{/if}}
    "plop": "plop"
  },
  "devDependencies": {
    "@rhao/plop-generators": "latest",
    {{#if changesets}}
    "npm-run-all": "latest",
    {{/if}}
    "plop": "latest"
  }
}
